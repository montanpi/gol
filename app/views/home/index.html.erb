<%= form_tag '/home/upload',
   class: "flex justify-center",
   :multipart => true do %>
   <%= file_field_tag "file",
   class: "py-2 px-4 border border-gray-300 bg-white rounded-md mr-2" %>
   <%= submit_tag "upload",
   class: "cursor-pointer py-2 px-4 text-sm font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700" %>
<% end %>
